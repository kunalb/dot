# Editors
export EDITOR="e"

# Extended globbing is really fun
setopt extendedglob

# But only with Vim bindings
bindkey -v

# But I still want incremental backwards search
bindkey "^R" history-incremental-pattern-search-backward

# I really, really dislike interrupts
unsetopt beep
unsetopt hist_beep
unsetopt list_beep

# History
export HISTFILE=$HOME/.zsh_history
export HISTSIZE=100000
export SAVEHIST=100000
setopt EXTENDED_HISTORY
setopt INC_APPEND_HISTORY_TIME

# Set up java
#export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_131.jdk/Contents/Home

# Adjust path
export PATH=/home/$USER/bin:/home/$USER/.local/bin:/home/$USER/builds/julia-1.6.2/bin:/home/$USER/dev/anaconda3/bin:$PATH

# Enable colours
autoload -U colors && colors

# Nicer prompts
PROMPT="%(0?..-- %?
)-- %D{%H.%M.%S} - %~ -
   "

# Load aliases
test -f ~/.aliases && . ~/.aliases

# Nicer tab completion
zstyle ':completion:*' menu select

# Load laptop specific settings
test -f ~/.localzshrc && . ~/.localzshrc

# Helper functions
scan() {
    grep -i $1 -r .
}

# Completions
fpath+=~/.zfunc

autoload -Uz compinit
compinit -i

source $HOME/.cargo/env
